{
  "name": "portfolio-monorepo",
  "version": "1.0.0",
  "description": "MERN stack monorepo with shared types, GraphQL server, and React client",
  "private": true,
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "scripts": {
	"start": "npm run start --workspace=server",
	"dev": "npm run dev --workspaces",
    "install-all": "npm install --workspaces",
	"lint": "eslint . --ext .ts,.tsx",
	"typegen": "npx @chakra-ui/cli typegen ./client/src/theme/index.ts",
	"postinstall": "npm run typegen --workspace=client",
	"build": "npm run build --workspaces",
	"lint-all": "npm run lint --workspaces",
	"build-all": "npm run build --workspaces",
    "build-shared": "npm run build --workspace=shared",
    "start-server": "npm run start --workspace=server",
    "dev-client": "npm run dev --workspace=client"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
