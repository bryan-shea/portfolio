{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website built with React, TypeScript, and Chakra UI",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "install-all": "npm install --workspaces",
    "lint": "npm run lint --workspace=client",
    "typegen": "npm run typegen --workspace=client",
    "postinstall": "npm run postinstall --workspace=client",
    "build": "npm run build --workspace=client",
    "preview": "npm run preview --workspace=client",
    "deploy": "gh-pages -d client/dist"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "gh-pages": "^6.2.0"
  }
}
